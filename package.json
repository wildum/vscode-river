{
    "name": "river",
    "displayName": "River",
    "description": "River configuration language support",
    "version": "0.2.0-alpha.1",
    "author": "Robert Fratto",
    "publisher": "rfratto",
    "repository": {
      "type": "git",
      "url": "https://github.com/rfratto/vscode-river"
    },
    "engines": {
        "vscode": "^1.69.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:river"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "river",
                "aliases": [
                    "River",
                    "river"
                ],
                "extensions": [
                    ".river",
                    ".rvr"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "river",
                "scopeName": "source.river",
                "path": "./syntaxes/river.tmLanguage.json"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Extension config",
            "properties": {
                "riverLanguageServer.agentVersion": {
                    "type": "string",
                    "default": "release-v0.40",
                    "description": "The Grafana Alloy version to use."
                }
            }
        }
    },
    "scripts": {
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "npm run compile"
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1"
    },
    "devDependencies": {
        "@types/node": "^14.18.63",
        "@types/vscode": "^1.69.0",
        "typescript": "^4.9.5",
        "vscode": "^1.1.37"
    }
}
